<main>

<h1> Create an Account! </h1>

<a href="/">Return to Home Page</a>


<form action="/user" method="POST">

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Username</label>
      <input type="text" name="username" class="form-control" id="inputEmail4" placeholder="Enter Username!">
    </div>

    <div class="form-group col-md-6">
      <label for="inputPassword4">Password</label>
      <input type="password" name="password" class="form-control" id="inputPassword4" placeholder="Enter Password!">
    </div>

  </div>
  <div class="form-group">
    <label for="inputAddress">Favorite Genre</label>
    <input type="text" name="favGenre" class="form-control" id="inputAddress" placeholder="Enter Favorite Genre!">
  </div>

  <div class="form-group">
    <label for="inputAddress2">Age</label>
    <input type="text" name="Age" class="form-control" id="inputAddress2" placeholder="Enter Age!">
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="Profile Picture">Profile Picture Url</label>
      <input type="text" name="profilePic" class="form-control" id="inputCity">
    </div>

  </div>
  <button type="submit" class="btn btn-primary">Get me Wavy</button>
</form>
</main>