{{!-- This page should hold the form to create new waves. --}}
<main>

<h1> Create a Wave! </h1>

<a href="/">Return to Home Page</a>


<form action="/waves" method="POST">


  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="wave name">Wave Name</label>
      <input type="text" name="wave_Name" class="form-control" placeholder="Enter The Wave Name!">
    </div>

    <div class="form-group col-md-6">
      <label for="background image">Background Image URL</label>
      <input type="text" name="backgroundImg" class="form-control" placeholder="Enter The URL Of Your Background Image">
    </div>

  </div>
  <div class="form-group">
    <label for="inputAddress">Wave Description</label>
    <input type="text" name="description" class="form-control" placeholder="Enter Your Description Here!">
  </div>

  </div>
  <button type="submit" class="btn btn-primary">Get me Wavy</button>
</form>
</main>